{
  "manifest_version": 3,
  "name": "Telegram Vocabulary Saver",
  "description": "Highlight a word, add its meaning, and send it to a Telegram group.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Telegram Vocabulary Saver"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/popup.css"]
    }
  ],
  "options_page": "options.html"
}
